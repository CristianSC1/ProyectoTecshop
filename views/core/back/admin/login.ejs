<%- include ../commun-back/head-back.ejs %>

<br>

<div class="container" >

    <!--style="background-color: #cccccc;"-->
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Iniciar sesión en el Panel de administración</h1>
            <div class="account-wall">
                <img class="profile-img" src="/img/ymple/ymple-square.png"
                     alt="">
                <form class="form-signin" action="/admin" method="post">
                    <input name="email" type="text" class="form-control" placeholder="Email" required autofocus>
                    <input name ="password" type="password" class="form-control" placeholder="Password" required>

                    <%if (typeof demoMode == 'undefined'){ %>

                    <p> Ingrese su cuenta de admin </p>

                    <%}else{%>

                    <p>Demo Credential<br> Ingrese su cuenta de admin<br>
                        <span style="color: red;">On Demo you will not be able to modify product</span></p>

                    <%}%>


                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Registrarse</button>
                    <label class="checkbox pull-left">
                        <input type="checkbox" value="remember-me">
                        Recuérdame
                    </label>
                    <!--a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span-->
                </form>
            </div>
            <!--a href="#" class="text-center new-account">Create an account </a-->
        </div>
    </div>
</div>


